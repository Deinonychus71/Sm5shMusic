<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Styles.Resources>
    <SolidColorBrush x:Key="BrushGrayDark">#202020</SolidColorBrush>
    <SolidColorBrush x:Key="BrushGrayLight">#606060</SolidColorBrush>
    <SolidColorBrush x:Key="BrushBackgroundDark">#191919</SolidColorBrush>
  </Styles.Resources>
  
  <Style Selector="Label.title">
    <Setter Property="FontSize" Value="32"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Margin" Value="13"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
  </Style>
  
  <Style Selector="Image.logo">
    <Setter Property="Margin" Value="13,5,0,0"/>
  </Style>
  
  <Style Selector="TextBox.jpnSupport">
    <Setter Property="FontFamily" Value="Microsoft YaHei,Simsun,苹方-简,宋体-简"/>
  </Style>
  <Style Selector=".jpnSupport TextBox">
    <Setter Property="FontFamily" Value="Microsoft YaHei,Simsun,苹方-简,宋体-简"/>
  </Style>

  <Style Selector="ContentControl.list">
    <Setter Property="Background" Value="#202020"/>
  </Style>
</Styles>