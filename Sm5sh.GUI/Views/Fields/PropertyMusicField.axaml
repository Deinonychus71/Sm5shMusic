<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Sm5sh.GUI.Views.Fields.PropertyMusicField">
  <StackPanel Classes="propertyField">
    <StackPanel Orientation="Horizontal">
      <Label Content="{Binding $parent[UserControl].Label}"/>
      <Label Content="&#128712;" ToolTip.Tip="{Binding $parent[UserControl].ToolTip}"/>
    </StackPanel>
    <StackPanel Orientation="Horizontal">
      <ContentControl Content="{Binding $parent[UserControl].MusicPlayer}"/>
      <TextBox IsVisible="{Binding $parent[UserControl].IsReadOnly}" Classes="readonly" IsReadOnly="True" Text="{Binding $parent[UserControl].Text}"></TextBox>
      <TextBox IsVisible="{Binding !$parent[UserControl].IsReadOnly}" Text="{Binding $parent[UserControl].Text}"></TextBox>
    </StackPanel>
  </StackPanel>
</UserControl>
